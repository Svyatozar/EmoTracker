<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:id="@+id/pulseLayout"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#AFEEEE"
        android:padding ="@dimen/activity_half_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/pulseInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Пульс (bpm)"/>

            <TextView
                android:id="@+id/pulseCounter"
                android:tag="pulse"
                android:paddingLeft="@dimen/activity_half_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/pulseSplash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="НЕТ ДАННЫХ"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/stressLayout"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#AFEEEE"
        android:padding ="@dimen/activity_half_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/stressInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Стресс (баллы)"/>

            <TextView
                android:id="@+id/stressCounter"
                android:tag="stress"
                android:paddingLeft="@dimen/activity_half_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/stressSplash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="НЕТ ДАННЫХ"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/activityLayout"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#AFEEEE"
        android:padding ="@dimen/activity_half_margin"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/activityInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/acTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Активность"/>
            <TextView
                android:id="@+id/activityCounter"
                android:paddingLeft="@dimen/activity_half_margin"
                android:tag="activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/acTitle"/>

            <TextView
                android:id="@+id/stepTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Шаги"
                android:paddingRight="@dimen/activity_half_margin"
                android:layout_toLeftOf="@+id/stepCounter"/>

            <TextView
                android:id="@+id/stepCounter"
                android:tag="stepCounter"
                android:paddingLeft="@dimen/activity_half_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activitySplash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="НЕТ ДАННЫХ"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>