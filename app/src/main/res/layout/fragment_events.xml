<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:padding="@dimen/activity_horizontal_margin">

    <ListView
        android:id="@+id/eventsListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:dividerHeight="@dimen/activity_half_margin"
        android:divider="@android:color/white">
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#AFEEEE"
        android:paddingTop="@dimen/activity_half_margin"
        android:paddingBottom="@dimen/activity_half_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_half_margin"
            android:text="@string/record"/>

        <TextView
            android:id="@+id/timeCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_half_margin"
            android:text="00:00"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_half_margin"
            android:text="@string/start"
            android:background="@drawable/button_selector"/>

    </LinearLayout>

    <TextView
        android:id="@+id/deviceState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/device_is_bad"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="#AFEEEE"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:padding="@dimen/activity_horizontal_margin"
        android:gravity="center"/>

</LinearLayout>